<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.GameFragment" >

    <TextView
        android:id="@+id/lbProblem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Problem" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listAnswer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/lbProblem"
        app:layout_constraintStart_toStartOf="@+id/lbProblem"
        app:layout_constraintTop_toBottomOf="@+id/lbProblem" />

    <Button
        android:id="@+id/btnAnswer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/answer"
        app:layout_constraintEnd_toEndOf="@+id/listAnswer"
        app:layout_constraintStart_toStartOf="@+id/listAnswer"
        app:layout_constraintTop_toBottomOf="@+id/listAnswer" />
</androidx.constraintlayout.widget.ConstraintLayout>